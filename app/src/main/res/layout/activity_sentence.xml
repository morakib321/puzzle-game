<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9FAFB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="28dp">

        <!-- Game Title -->
        <TextView
            android:id="@+id/tvGameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sentence Puzzle Game"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2C3E50"
            android:layout_marginBottom="6dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Tagline -->
        <TextView
            android:id="@+id/tvTagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sharpen your memory. Play with words!"
            android:textSize="15sp"
            android:textColor="#7A869A"
            android:layout_marginBottom="32dp"
            android:fontFamily="sans-serif-light" />

        <!-- Input Section -->
        <EditText
            android:id="@+id/editSentence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Type a sentence to add"
            android:padding="14dp"
            android:textSize="16sp"
            android:background="@android:drawable/editbox_background_normal"
            android:layout_marginBottom="20dp" />

        <!-- Insert + Select Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="28dp">

            <Button
                android:id="@+id/btnInsert"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:backgroundTint="#33A1D7"
                android:fontFamily="sans-serif"
                android:onClick="onInsertClick"
                android:text="Insert"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnSelect"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Select"
                android:onClick="onSelectClick"
                android:backgroundTint="#33A1D7"
                android:textColor="@android:color/white"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <!-- Selected Sentence Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:cardCornerRadius="14dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="28dp">

            <TextView
                android:id="@+id/tvSelectedSentence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your random sentence will appear here"
                android:textSize="18sp"
                android:padding="18dp"
                android:textColor="#34495E"
                android:gravity="center"
                android:fontFamily="sans-serif" />
        </androidx.cardview.widget.CardView>

        <!-- Run Button -->
        <Button
            android:id="@+id/btnRun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â–¶ Start Puzzle Game"
            android:onClick="onRunClick"
            android:backgroundTint="#0FB4A1"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="10dp"
            android:padding="14dp" />

    </LinearLayout>
</ScrollView>